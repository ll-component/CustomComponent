<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="EmptyView">
        <attr name="empty_title" format="string" />
        <attr name="empty_icon_width" format="dimension" />
        <attr name="empty_icon_height" format="dimension">
            <enum name="fill_parent" value="-1" />
            <!-- The view should be as big as its parent (minus padding).
                 Introduced in API Level 8. -->
            <enum name="match_parent" value="-1" />
            <!-- The view should be only big enough to enclose its content (plus padding). -->
            <enum name="wrap_content" value="-2" />
        </attr>
        <attr name="empty_icon" format="reference" />
        <attr name="empty_title_topToBottom_margin" format="dimension" />
        <attr name="empty_title_bottomToBottom_margin" format="dimension" />
        <attr name="empty_title_topToBottom_icon" format="boolean" />
    </declare-styleable>

    <declare-styleable name="FormView">
        <attr name="form_name" format="string" />
        <attr name="form_name_centerVertical" format="boolean" />
        <attr name="form_name_marginTop" format="dimension" />
        <attr name="form_name_text_size" format="dimension" />
        <attr name="form_name_text_color" format="color" />
        <attr name="form_name_text_style" format="enum">
            <enum name="BOLD" value="1" />
            <enum name="NORMAL" value="0" />
        </attr>
        <attr name="form_unit" format="string" />
        <attr name="form_unit_text_style" format="enum">
            <enum name="BOLD" value="1" />
            <enum name="NORMAL" value="0" />
        </attr>
        <attr name="form_unit_text_size" format="dimension" />
        <attr name="form_unit_text_color" format="color" />
        <attr name="form_end_icon" format="reference" />
        <attr name="form_bottom_line_color" format="color" />
        <attr name="form_bottom_line_gone" format="boolean" />
        <attr name="form_bottom_line_startToStart_edit" format="boolean" />

        <attr name="form_edit_hint" format="string" />
        <attr name="form_edit_paddingTop" format="dimension" />
        <attr name="form_edit_gravity" format="enum">
            <enum name="CENTER_VERTICAL" value="0" />
            <enum name="TOP" value="1" />
            <enum name="BOTTOM" value="2" />
            <enum name="START" value="3" />
            <enum name="END" value="4" />
            <enum name="TOP_START" value="5" />
            <enum name="CENTER" value="6" />
            <enum name="START_CENTER_VERTICAL" value="7" />
            <enum name="END_CENTER_VERTICAL" value="8" />
        </attr>
        <attr name="form_edit_input_enable" format="boolean" />
        <attr name="form_edit_hint_color" format="color" />
        <attr name="form_edit_text_size" format="dimension" />
        <attr name="form_edit_text_color" format="color" />
        <attr name="form_edit_text" format="string" />
        <attr name="form_edit_text_style" format="enum">
            <enum name="BOLD" value="1" />
            <enum name="NORMAL" value="0" />
        </attr>
        <attr name="form_edit_max_length" format="integer" />
        <attr name="form_background_color" format="color" />
        <attr name="form_edit_input_type" format="integer">
            <enum name="TYPE_CLASS_NUMBER" value="0x00000002" />
            <enum name="TYPE_CLASS_PHONE" value="0x00000003" />
            <enum name="TYPE_NUMBER_FLAG_DECIMAL" value="0x00002000" />
            <enum name="TYPE_TEXT_FLAG_MULTI_LINE" value="0x00020000"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="ShapeTextView">
        <attr name="shape" format="integer">
            <enum name="RECTANGLE" value="0" />
            <enum name="OVAL" value="1" />
        </attr>
        <attr name="shapeRadius" format="dimension" />
        <attr name="shapeTopLeftRadius" format="dimension" />
        <attr name="shapeTopRightRadius" format="dimension" />
        <attr name="shapeBottomLeftRadius" format="dimension" />
        <attr name="shapeBottomRightRadius" format="dimension" />
        <attr name="shapeStrokeWidth" format="dimension" />
        <attr name="shapeSolidColor" format="color" />
        <attr name="shapeStrokeColor" format="color" />
        <attr name="shapeStrokeStartColor" format="color" />
        <attr name="shapeStrokeEndColor" format="color" />
        <attr name="shapeStartColor" format="color" />
        <attr name="shapeEndColor" format="color" />
        <attr name="shapeColorOrientation" format="integer">
            <enum name="TOP_BOTTOM" value="0" />
            <enum name="RIGHT_LEFT" value="2" />
            <enum name="BOTTOM_TOP" value="4" />
            <enum name="LEFT_RIGHT" value="6" />
        </attr>
    </declare-styleable>

    <declare-styleable name="RotateTextView">
        <attr name="rt_degrees" format="integer" />
    </declare-styleable>


    <declare-styleable name="ClearEditTextView">
        <attr name="searchClearIcon" format="reference"/>
        <attr name="searchClearIconWidth" format="dimension"/>
        <attr name="searchClearIconHeight" format="dimension"/>
        <attr name="searchStartIcon" format="reference"/>
        <attr name="searchStartIconWidth" format="dimension"/>
        <attr name="searchStartIconHeight" format="dimension"/>
        <attr name="searchBgShapeRadius" format="dimension"/>
        <attr name="searchBgShapeSolidColor" format="color"/>
        <attr name="searchBgShapeStrokeWidth" format="dimension"/>
        <attr name="searchBgShapeStrokeColor" format="color"/>
    </declare-styleable>
</resources>