<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context=".MainActivity">

    <com.ll.uicomponent.ShapeTextView
        android:id="@+id/emptyView"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="EmptyView"
        android:gravity="center"
        android:textColor="#ff4b73"
        app:shapeStrokeWidth="1dp"
        app:shapeStrokeColor="#ff4b73"
        app:shapeRadius="60dp"
        android:onClick="onClick"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp" />

    <com.ll.uicomponent.ShapeTextView
        android:id="@+id/formView"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="FormView"
        android:gravity="center"
        android:textColor="#ff4b73"
        app:shapeStrokeWidth="1dp"
        app:shapeStrokeColor="#ff4b73"
        app:shapeRadius="60dp"
        android:layout_marginTop="10dp"
        android:onClick="onClick"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp" />

    <com.ll.uicomponent.ShapeTextView
        android:id="@+id/shapeTextView"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:textColor="#ff4b73"
        android:text="ShapeTextView"
        android:gravity="center"
        app:shapeStrokeWidth="1dp"
        app:shapeStrokeColor="#ff4b73"
        app:shapeRadius="60dp"
        android:layout_marginTop="10dp"
        android:onClick="onClick"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp" />

    <com.ll.uicomponent.ShapeTextView
        android:id="@+id/rotateTextView"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:textColor="#ff4b73"
        android:text="RotateTextView"
        android:gravity="center"
        app:shapeStrokeWidth="1dp"
        app:shapeStrokeColor="#ff4b73"
        app:shapeRadius="60dp"
        android:layout_marginTop="10dp"
        android:onClick="onClick"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp" />

    <com.ll.uicomponent.ShapeTextView
        android:id="@+id/clearEditTextView"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:textColor="#ff4b73"
        android:text="ClearEditTextView"
        android:gravity="center"
        app:shapeStrokeWidth="1dp"
        app:shapeStrokeColor="#ff4b73"
        app:shapeRadius="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:onClick="onClick" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示不同色块的InfoBar："
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"

        />

    <com.ll.uicomponent.ChameleonView
        android:id="@+id/chameleon"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:clShapeRadius="9dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="吸底并带顶部阴影的Layout："
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        />

    <com.ll.uicomponent.SuctionBottomLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        >
        <com.ll.uicomponent.ShapeTextView
            android:id="@+id/add"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:text="升级云存储空间"
            android:textColor="#ffffff"
            android:textSize="14sp"
            app:shapeEndColor="#FF3682"
            app:shapeRadius="20dp"
            app:shapeStartColor="#FF6064" />
    </com.ll.uicomponent.SuctionBottomLayout>

</LinearLayout>