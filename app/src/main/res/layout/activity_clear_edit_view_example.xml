<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    tools:context=".example.ClearEditTextViewExampleActivity">

    <com.ll.uicomponent.ClearEditTextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="10dp"
        android:hint="ClearEditTextView"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:searchBgShapeRadius="20dp"
        app:searchBgShapeSolidColor="#F6F6F6" />

    <com.ll.uicomponent.ClearEditTextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="10dp"
        android:hint="ClearEditTextView"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:searchBgShapeRadius="5dp"
        app:searchBgShapeSolidColor="#F6F6F6" />

    <com.ll.uicomponent.ClearEditTextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="10dp"
        android:hint="ClearEditTextView"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:searchBgShapeRadius="20dp"
        app:searchBgShapeSolidColor="#F6F6F6"
        app:searchBgShapeStrokeColor="@color/colorAccent"
        app:searchBgShapeStrokeWidth="1dp" />

    <com.ll.uicomponent.ClearEditTextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="10dp"
        android:hint="ClearEditTextView"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:searchBgShapeRadius="5dp"
        app:searchBgShapeSolidColor="#F6F6F6"
        app:searchBgShapeStrokeColor="@color/colorAccent"
        app:searchBgShapeStrokeWidth="1dp" />

    <com.ll.uicomponent.ClearEditTextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="10dp"
        android:hint="ClearEditTextView"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f5f5f5"/>
</LinearLayout>