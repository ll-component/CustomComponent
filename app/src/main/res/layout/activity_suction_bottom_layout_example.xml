<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".example.SuctionBottomLayoutExampleActivity">
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="吸底并带顶部阴影的Layout："
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        />

    <com.ll.uicomponent.SuctionBottomLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <com.ll.uicomponent.ShapeTextView
            android:id="@+id/add"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:text="确认"
            android:textColor="#ffffff"
            android:textSize="14sp"
            app:shapeEndColor="#FF3682"
            app:shapeRadius="20dp"
            app:shapeStartColor="#FF6064" />

        <com.ll.uicomponent.ShapeTextView
            android:id="@+id/delete"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:text="删除"
            android:textColor="@color/colorTheme"
            android:textSize="14sp"
            app:shapeStrokeColor="#FF6064"
            app:shapeStrokeWidth="1dp"
            app:shapeRadius="20dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintTop_toBottomOf="@id/add"
            />
    </com.ll.uicomponent.SuctionBottomLayout>
</LinearLayout>